{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema",
  "id": "http://jsonschema.net",
  "required": false,
  "properties": {
    "pluginLocations": {
      "type": "object",
      "required": true,
      "properties": {
        "config": {
          "type": "object"
        },
        "course": {
          "type": "object"
        },
        "contentobject": {
          "type": "object",
          "properties": {
            "_backgroundSwitcher": {
              "type": "object",
              "required": false,
              "legend": "Background Switcher",
              "properties": {
                "_isActive": {
                  "type": "boolean",
                  "required": false,
                  "default": false,
                  "title": "Is Enabled",
                  "inputType": "Checkbox",
                  "validators": [],
                  "help": "Controls whether the Background Switcher extension is enabled or disabled."
                }
              }
            }
          }
        },
        "article": {
          "type": "object"
        },
        "block": {
          "type": "object",
          "properties": {
            "_backgroundSwitcher": {
              "type": "object",
              "required": false,
              "legend": "Background Switcher",
              "properties": {
                "src": {
                  "type": "string",
                  "required": true,
                  "title": "Desktop Image",
                  "default": "",
                  "inputType": "Asset:image",
                  "validators": [],
                  "help": "The background image you want shown for this block when the course is viewed at desktop resolution."
                }
              }
            }
          }
        },
        "component": {
          "type": "object"
        }
      }
    }
  }
}
